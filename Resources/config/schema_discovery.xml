<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autowire="true" autoconfigure="true" public="false"/>

        <service id="vaderlab.eav.core.schema.discover.protected_schemas_discovery"
                 class="Vaderlab\EAV\Core\Schema\Discover\File\ProtectedSchemasDiscovery"
                 lazy="true">
            <argument type="service" id="vaderlab.eav.core.service.reflection.class_metadata_resolver" />
            <argument type="service" id="vaderlab.eav.core.service.reflection.reflection" />
            <argument type="service" id="kernel"/>
        </service>

        <service id="vaderlab.eav.core.schema.discover.file_schema"
                 class="Vaderlab\EAV\Core\Schema\Discover\File\SchemaDiscover"
                 lazy="true">
            <argument type="service" id="vaderlab.eav.core.schema.discover.protected_schemas_discovery" />
            <argument type="service" id="vaderlab.eav.core.service.reflection.reflection" />
            <argument type="service" id="vaderlab.eav.core.service.reflection.class_metadata_resolver" />
            <argument type="service" id="vaderlab.eav.core.schema.file.schema_to_array_converter" />
        </service>


        <service id="vaderlab.eav.core.schema.discover.orm_schema"
                 class="Vaderlab\EAV\Core\Schema\Discover\ORM\SchemaDiscover"
                 lazy="true">
            <argument type="service" id="doctrine.orm.default_entity_manager"/>
            <argument type="service" id="vaderlab.eav.core.schema.orm.schema_to_array_converter" />
        </service>

        <service id="vaderlab.eav.core.schema.file.schema_to_array_converter"
                 class="Vaderlab\EAV\Core\Schema\Discover\File\SchemaToArrayConverter"
                 lazy="true">
            <argument type="service" id="vaderlab.eav.core.schema.file.attribute_to_array_converter" />
        </service>

        <service id="vaderlab.eav.core.schema.file.attribute_to_array_converter"
                 class="Vaderlab\EAV\Core\Schema\Discover\File\AttributeToArrayConverter"
                 lazy="true">
        </service>

        <service id="vaderlab.eav.core.schema.orm.schema_to_array_converter"
                 class="Vaderlab\EAV\Core\Schema\Discover\ORM\SchemaToArrayConverter"
                 lazy="true">
            <argument type="service" id="vaderlab.eav.core.schema.orm.attribute_to_array_converter" />
        </service>

        <service id="vaderlab.eav.core.schema.orm.attribute_to_array_converter"
                 class="Vaderlab\EAV\Core\Schema\Discover\ORM\AttributeToArrayConverter">
        </service>

        <service id="vaderlab.eav.core.schema.diff"
                 class="Vaderlab\EAV\Core\Schema\Diff\Diff"
                 lazy="true">
            <argument type="service" id="vaderlab.eav.core.schema.discover.orm_schema"/>
            <argument type="service" id="vaderlab.eav.core.schema.discover.file_schema" />
        </service>

    </services>
</container>